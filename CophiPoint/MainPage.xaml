<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:converters="clr-namespace:CophiPoint.Converters"
             xmlns:local="clr-namespace:CophiPoint"
             xmlns:controls="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             xmlns:ffsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             x:Class="CophiPoint.MainPage"
             >
    <ContentPage.Resources>
        <converters:InverseBoolConverter x:Key="inverter"/>
        <converters:NullableBoolConverter x:Key="nullaplly"/>
        <converters:DateTimeFormatter x:Key="formatDate"/>
        <converters:PriceFormatter x:Key="formatPrice" />
        <Style TargetType="CarouselPage">
            <Setter Property="BackgroundColor" Value="Aqua"/>
        </Style>
    </ContentPage.Resources>
    <AbsoluteLayout VerticalOptions="FillAndExpand" x:Name="Page">
        <StackLayout x:Name="ShopPage" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,.75" BackgroundColor="White">
            <ImageButton HeightRequest="40" WidthRequest="40" Source="baseline_view_list_black_36.png" />
            <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <controls:CarouselViewControl ShowArrows="True" ItemsSource="{Binding Products}" Orientation="Horizontal" InterPageSpacing="10">
                    <controls:CarouselViewControl.ItemTemplate>
                        <DataTemplate>
                            <RelativeLayout>
                                <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
                                        RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                            Property=X
                                        }"
                                        RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                            Property=Y
                                        }"
                                        RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                            Property=Width}"
                                        RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"
                                        >
                                    <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="SpaceEvenly">
                                        <Label Text="{Binding Name}" FontSize="Large"/>
                                        <ffsvg:SvgCachedImage x:Name="productImage"  FlexLayout.Grow="1"
                                                VerticalOptions="Center" WidthRequest="200" HeightRequest="200" 
                                                Source="{Binding ImageUrl}"
                                                />
                                        <Label Text="{Binding Price, Converter={StaticResource formatPrice}}" 
                                               FontSize="Large" TextColor="LimeGreen" />
                                        <Label Text="{Binding PricePerUnit, Converter={StaticResource formatPrice}}" />
                                    </FlexLayout>
                                </ContentView>
                                <ImageButton 
                                    HeightRequest="60" WidthRequest="60" CornerRadius="30" Padding="20"
                                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                            Property=Width, Factor=1, Constant=-80
                                    }"
                                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                            Property=Height, Factor=1, Constant=-80}"
                                    BackgroundColor="Gray" Source="baseline_add_white_36.png"
                                    />
                                <ImageButton
                                    WidthRequest="40" HeightRequest="40"
                                    Source="baseline_star_black_36.png" IsVisible="{Binding Favorite}"
                                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                            Property=X, Factor=0, Constant=20}"
                                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                            Property=Y, Factor=0, Constant=50}"
                                    />
                                <ImageButton
                                    BackgroundColor="Transparent" WidthRequest="40" HeightRequest="40"
                                    Source="baseline_star_border_black_36.png" IsVisible="{Binding NotFavorite}"
                                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                            Property=X, Factor=0, Constant=10}"
                                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                            Property=Y, Factor=0, Constant=50}"
                                    />
                            </RelativeLayout>
                        </DataTemplate>
                    </controls:CarouselViewControl.ItemTemplate>
                </controls:CarouselViewControl>
            </ContentView>
        </StackLayout>

        <StackLayout x:Name="HistoryPage" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"
                     Orientation="Vertical" VerticalOptions="FillAndExpand" Spacing="0" BackgroundColor="White">
            <StackLayout VerticalOptions="Start" BackgroundColor="#006df0" Spacing="0" Padding="10,5">
                <StackLayout HeightRequest="24" VerticalOptions="Start" HorizontalOptions="FillAndExpand" >
                    <ffsvg:SvgCachedImage WidthRequest="24" HeightRequest="24" 
                            IsVisible="{Binding HistoryShown, Converter={StaticResource inverter}}" 
                            Source="ExpandLess.svg" HorizontalOptions="Center" >
                        <ffsvg:SvgCachedImage.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ShowHistory"/>
                            <PanGestureRecognizer PanUpdated="ShowHistory" />
                        </ffsvg:SvgCachedImage.GestureRecognizers>
                    </ffsvg:SvgCachedImage>
                    <ffsvg:SvgCachedImage WidthRequest="24" HeightRequest="24" 
                            IsVisible="{Binding HistoryShown, Converter={StaticResource nullaplly}}"  
                            Source="Close.svg" HorizontalOptions="Start">
                        <ffsvg:SvgCachedImage.GestureRecognizers>
                            <TapGestureRecognizer Tapped="HideHistory"/>
                            <PanGestureRecognizer PanUpdated="HideHistory" />
                        </ffsvg:SvgCachedImage.GestureRecognizers>
                    </ffsvg:SvgCachedImage>
                </StackLayout>
                <Label Text="Account" FontSize="Micro" TextColor="White" HorizontalOptions="Center"
                       IsVisible="{Binding HistoryShown, Converter={StaticResource nullaplly}}"/>
                <Grid HorizontalOptions="FillAndExpand" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Text="{Binding User}" Grid.Row="0" Grid.Column="0" VerticalOptions="End" 
                           FontSize="Default" TextColor="White"/>
                    <Label Text="Log out" Grid.Row="1" Grid.Column="0" FontSize="Small"
                           HorizontalOptions="Start" VerticalOptions="Start" TextColor="WhiteSmoke"
                           IsVisible="{Binding HistoryShown, Converter={StaticResource nullaplly}}" />

                    <Label Text="{Binding Balance, Converter={StaticResource formatPrice}}" Grid.Row="0" Grid.Column="1" VerticalOptions="End" 
                           FontSize="Large" TextColor="White"/>
                    <Label Text="How to pay" Grid.Row="1" Grid.Column="1" FontSize="Small" 
                           HorizontalOptions="End" VerticalOptions="Start" TextColor="WhiteSmoke"
                           IsVisible="{Binding HistoryShown, Converter={StaticResource nullaplly}}" />
                </Grid>
            </StackLayout>

            <Label Text="Purchase history" FontSize="Micro" HorizontalOptions="Center"
                   IsVisible="{Binding HistoryShown, Converter={StaticResource nullaplly}}"/>
            <ListView ItemsSource="{Binding History}" HasUnevenRows="true" HorizontalOptions="FillAndExpand"
                      SeparatorVisibility="None" Margin="10,3">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                              <Label Text="{Binding Date, Converter={StaticResource formatDate}}" HorizontalOptions="Start"/>
                              <Label Text="{Binding ProductName}" HorizontalOptions="CenterAndExpand"/>
                              <Label Text="{Binding Price, Converter={StaticResource formatPrice}}" HorizontalOptions="End"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>
